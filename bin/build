"build package"


# AUTHOR


__author__ = "Bart Thate <programmingobject@gmail.com>"
__version__ = 1


# IMPORTS


import os


# UTILITY


def popen(txt):
    """run in popen"""
    for line in os.popen(txt).readlines():
        print(line.strip())


# RUNTIME


popen("python3 setup.py sdist")
popen("python3 -m pip wheel -e .")
popen("mv *.whl dist")
