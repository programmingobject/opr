#!/usr/bin/env python3
# This file is placed in the Public Domain.
#
# pylint: disable=E0001


"binary"


import os
import subprocess
import sys


NAME = sys.argv[0].rsplit(os.sep, maxsplit=1)[-1]
TXT = " ".join(sys.argv[1:])


def popen(tekst):
    "run in popen"
    with subprocess.Popen(
                          tekst.split(),
                          stdin=sys.stdin,
                          stdout=sys.stdout,
                          stderr=sys.stderr,
                          close_fds=False,
                          text=True) as prock:
        prock.communicate()
        prock.wait()


if __name__ == "__main__":
    try:
        popen(f"python3 -m {NAME} {TXT}")
    except KeyboardInterrupt:
        print("")

