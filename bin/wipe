#!/usr/bin/env python3
# This file is placed in the Public Domain.


"""wipe all"""


# IMPORTS


import os
import sys


# DEFINES


os.environ["PATH"] += ":bin"


# UTILITY


def popen(txt):
    """run in popen"""
    for line in os.popen(txt).readlines():
        print(line.rstrip())
        sys.stdout.flush()


# RUNTIME


def main():
    """main program"""
    popen("rm -fR store env build dist MANIFEST *.egg-info")
    popen("rm -fR .tsd .pytest_cache .test  __pycache__ *~")
    popen("loop . rm -fR *~")
    popen("loop . rm -fR __pycache__")


if __name__ == "__main__":
    main()
